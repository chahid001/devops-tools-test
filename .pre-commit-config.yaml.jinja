{% macro u_tests_entry() %}
npm test -- --bail --findRelatedTests
{% endmacro %}

# ---------------------------------------------------------------------------- #
#                              🔄 Pre-Commit Hooks                             #
# ---------------------------------------------------------------------------- #

repos:
# ---------------------------------------------------- #
#                    🧪 Unit Tests                     #
# ---------------------------------------------------- #
- repo: local
  hooks:
    - id: unit-tests
      name: "Performing Unit Tests 🧪  "
      entry: {% if tech_stack == "JS/TS[X]" %} u_tests_entry() {% endif %}
      language: system
      pass_filenames: false

# ---------------------------------------------------- #
#                🔎 Code Quality Check                 #
# ---------------------------------------------------- #
- repo: https://github.com/biomejs/pre-commit
  rev: v2.1.2
  hooks:
  - id: biome-format # ---------- Formatting 
    name: "Formatting 📝 "
  - id: biome-lint # ---------- Lint
    name: "Linting 📌 "
  - id: biome-check # ---------- Final Check
    name: "Final Check 🗃️  "


{% if tech_stack == "Python" %}
# ---------------------------------------------------- #
#                    🧪 Unit Tests                     #
# ---------------------------------------------------- #
- repo: local
  hooks:
    - id: unit-tests
      name: "Performing Unit Tests 🧪  "
      entry: python3 -m unittest discover -s tests
      language: system

# ---------------------------------------------------- #
#                🔎 Code Quality Check                 #
# ---------------------------------------------------- #
- repo: https://github.com/astral-sh/ruff-pre-commit
  rev: v0.4.10
  hooks:
  - id: ruff-format # ---------- Formatting 
    name: "Formatting 📝 "
  - id: ruff-check # ---------- Lint
    name: "Lintting 📌 "
    # args:
    # - --fix
{% endif %}

# ---------------------------------------------------- #
#                   🔐 Security Check                  #
# ---------------------------------------------------- #
- repo: https://github.com/gitleaks/gitleaks
  rev: v8.22.1
  hooks:
  - id: gitleaks
    # args: ["--config", "gitleaks.toml"] # In case of custom rules
    name: "Secrets Leak Scanning 🔐 "

# ---------------------------------------------------- #
#                    📄 Files Check                    #
# ---------------------------------------------------- #
- repo: https://github.com/pre-commit/pre-commit-hooks
  rev: v5.0.0
  hooks:
  - id: check-added-large-files 
    name: "Scanning for Large Files 🔍 "